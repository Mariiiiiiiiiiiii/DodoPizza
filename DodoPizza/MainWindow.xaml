<Window x:Class="DodoPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DodoPizza"
        mc:Ignorable="d"
        Title="Касса" MinHeight="450" MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>

        <StackPanel Background="#FF4F00" 
             Margin="0"/>
        <StackPanel Orientation="Horizontal">
            <Image Source="/img/logo.ico" Height="97" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Left"/>
            <TextBlock Text="DODO PIZZA" FontSize="60" 
            FontWeight="Bold" 
            HorizontalAlignment="Left" 
            Width="367" Foreground="White" Height="92" 
            VerticalAlignment="Center"/>
        </StackPanel>
       
        <Frame Name="FrmMain"
            Background="#EEEE"
            Grid.Row="1"
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
